{
  "openapi":"3.0.0",
  "info":{
      "title": "Quik User API",
      "description": "Documentation to Quik User API",
      "contact": {
          "email": "luiz.mendes@outlook.com"
      },
      "version": "1.0.0"
  },
  "servers":[
    {
      "url":"http://localhost:3000/v1",
      "description": "Dev API"
    }
  ],
  "paths":{
    "/user":{
      "post": {
        "summary":"Add one user.",
        "description": "Responsible for adding the user.",
        "tags":["User"],
        "requestBody": {
          "content":{
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user":{
                  "value": {
                    "name": "Luiz Mendes",
                    "username": "luizmendes90",
                    "birthdate": "1990-12-08",
                    "address": "Avenida Tropical",
                    "addressNumber": "1234",
                    "primaryPhone": "99999999999",
                    "description": "Hello"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully created",
            "content": {
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/responseMessage"
                },
                "examples": {
                  "responseMessage": {
                    "value": {
                      "status": true,
                      "message": "Successfuly created",
                      "data":""
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Already exists",
            "content": {
              "application/json": {
                "schema":{
                  "$ref": "#/components/schemas/responseMessage"
                },
                "examples": {
                  "responseMessage": {
                    "value": {
                      "status": false,
                      "message": "Username already exists.",
                      "data":""
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}":{
      "get":{
        "summary": "Get one user by id.",
        "description": "Responsible for fetching a user based on the entered id.",
        "tags": ["User"],
        "parameters": [
          {
            "name":"id",
            "in": "path",
            "description": "UUID of User",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User Found.",
            "content": {
              "application/json": {
                "schema": "object",
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "404": {
            "description": "Incorrect data."
          },
          "204": {
            "description": "User doesn't exists."
          }
        }
      }
    }
  },
  "components":{
    "schemas":{
      "User": {
        "type": "object",
        "properties": {
          "id":{
            "type":"string"
          },
          "name":{
            "type":"string"
          },
          "username":{
            "type":"string"
          },
          "birthdate":{
            "type":"Date"
          },
          "address":{
            "type":"string"
          },
          "addressNumber":{
            "type":"string"
          },
          "primaryPhone":{
            "type":"string"
          },
          "description":{
            "type":"string"
          },
          "createdAt":{
            "type":"Date"
          }
        }
      },
      "responseMessage": {
        "type":"object",
        "properties":{
            "status":{
                "type":"boolean"
            },
            "message":{
                "type":"string"
            },
            "data":{
                "type":"object"
            }
        }
    }
    }
  }
}